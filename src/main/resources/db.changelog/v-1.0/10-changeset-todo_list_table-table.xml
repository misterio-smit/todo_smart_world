    <changeSet id="3" author="misterrio">
        <sqlFile dbms="postgresql"
                 endDelimiter="\nGO"
                 relativeToChangelogFile="true"
                 splitStatements="true"
                 stripComments="true"
                 path="10-create-todo_list_table-table.sql"/>
        <rollback>
            <sqlFile dbms="postgresql"
                     endDelimiter="\nGO"
                     relativeToChangelogFile="true"
                     splitStatements="true"
                     stripComments="true"
                     path="10-drop-todo_list_table-table.sql"/>
        </rollback>
    </changeSet>


</databaseChangeLog>
